@model Recruit.Models.tbl_candidates






<hr />
@{
    List<SelectListItem> sources = new List<SelectListItem>();
    @foreach (var items in (IEnumerable<tbl_sources>)TempData["Sources"])
    {
        sources.Add(new SelectListItem
        {


            Text = items.name,
            Value = items.code,
            Selected = true

        });
    }
    List<SelectListItem> stages = new List<SelectListItem>();
    @foreach (var items in (IEnumerable<tbl_process_stages>)TempData["ProcessStages"])
    {
        stages.Add(new SelectListItem
        {


            Text = items.stage,
            Value = items.id.ToString(),
            Selected = true

        });
    }
    List<SelectListItem> status = new List<SelectListItem>();
    @foreach (var items in (IEnumerable<tbl_process_statuses>)TempData["ProcessStatuses"])
    {
        status.Add(new SelectListItem
        {


            Text = items.status,
            Value = items.id.ToString(),
            Selected = true

        });
    }
    List<SelectListItem> vacancy = new List<SelectListItem>();
    @foreach (var items in (IEnumerable<tbl_vacancies>)TempData["Vacancies"])
    {
        vacancy.Add(new SelectListItem
        {


            Text = items.name,
            Value = items.code,
            Selected = true

        });
    }

    List<SelectListItem> employees = new List<SelectListItem>();
    @foreach (var items in (IEnumerable<tbl_employees>)TempData["Employees"])
    {
        employees.Add(new SelectListItem
        {


            Text = items.name,
            Value = items.id,
            Selected = true

        });
    }
    List<SelectListItem> owners = new List<SelectListItem>();
    @foreach (var items in (IEnumerable<tbl_owners>)TempData["Owners"])
    {
        owners.Add(new SelectListItem
        {


            Text = items.first_name,
            Value = items.id.ToString(),
            Selected = true

        });
    }
}


