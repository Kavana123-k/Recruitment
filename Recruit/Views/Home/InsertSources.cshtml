@model Recruit.Models.Source

@{
    ViewData["Title"] = "InsertSources";

}

@{
    if (ViewBag.SubmitValue == "Update")
    {
        <h1 align="center" style="color: white;">Update Source Details</h1>
    }
    else
    {
        <h1 align="center" style="color: white;">Insert Source Details</h1>
    }
}

<hr />
<link rel="stylesheet" href="~/css/layoutstyles.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/uikit@3.6.5/dist/css/uikit.min.css" />
<style>
    .form-control {
        width: 80%;
    }
</style>

<div class="row">
    <div class="col-md-4">
        <form asp-action="InsertSources">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="code" class="control-label">Code</label>
                <input asp-for="code" class="form-control" />
                <span asp-validation-for="code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="name" class="control-label">Name</label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            @{
                if (ViewBag.SubmitValue == "Update")
                {
                    <div class="row">
                        <div class="column">
                            <input type="submit" value="Update" class="btn bg-primary btnwid" />

                        </div>
                    </div>
                }
                else
                {
                    <div class="row">
                        <div class="column">
                            <input type="submit" value="Add" class="btn bg-primary btnwid" />

                        </div>
                    </div>
                }
            }
        </form>
        <div>
            <a asp-action="Index">Back to Dashboard</a>
        </div>
        <div>

            <a asp-action="DisplaySources">Back to Display Sources</a>
        </div>
    </div>
    <div class="column">
        <partial name="_DisplaySourcesPartial" data=@TempData["source"] />
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/uikit@3.6.5/dist/js/uikit.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/uikit@3.6.5/dist/js/uikit-icons.min.js"></script>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@{
    if (@TempData["Msg"] != null)
    {
        if (TempData["Msg"] == "Data save Successfully" || TempData["Msg"] == "Data Updated Successfully")
        {
            <script>

        UIkit.notification({ message: '@TempData["Msg"]', status: 'success', timeout: 5000 })
           window.location.href = "@Url.Action("DisplaySources", "Home")";
            </script>
        }
        else
        {
            <script>

    UIkit.notification({ message: '@TempData["Msg"]', status: 'danger', timeout: 5000 })


            </script>
        }

    }
} 