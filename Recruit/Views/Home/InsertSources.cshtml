@model Recruit.Models.Source

@{
    ViewData["Title"] = "InsertSources";

}

<h1 align="center"style="color: white;">Source Details</h1>


<hr />
<link rel="stylesheet" href="~/css/layoutstyles.css">
<div class="row">
    <div class="col-md-4">
        <form asp-action="InsertSources">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="code" class="control-label">Code</label>
                <input asp-for="code" class="form-control" />
                <span asp-validation-for="code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="name" class="control-label">Name</label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@ViewBag.SubmitValue" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-action="Index">Back to Dashboard</a>
        </div>
        <div>

            <a asp-action="DisplaySources">Back to Display Sources</a>
        </div>
    </div>
<div class="column">
    <partial name="_DisplaySourcesPartial" data=@TempData["source"] />
</div>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@{
    if (@TempData["Msg"] != null)
    {
        if (TempData["Msg"] == "Data save Successfully" || TempData["Msg"] == "Data Updated Successfully")
        {
            <script>

        UIkit.notification({ message: '@TempData["Msg"]', status: 'success', timeout: 5000 })
           window.location.href = "@Url.Action("DisplaySources", "Home")";
            </script>
        }
        else
        {
            <script>

    UIkit.notification({ message: '@TempData["Msg"]', status: 'danger', timeout: 5000 })


            </script>
        }

    }
} 