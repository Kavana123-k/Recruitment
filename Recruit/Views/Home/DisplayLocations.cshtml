@model List<Location>

@using Kendo.Mvc.UI;
<h1>Location Details</h1>

@(Html.Kendo().Grid(Model)
    .Name("grid").Width(720)
    .Columns(columns =>
    {
        columns.Bound(p => p.id).Title("ID").Width(10);
        columns.Bound(p => p.city).Title("City").Width(20);
        columns.Bound(p => p.id).Title(" ").Width(100).ClientTemplate(
                            "<a class='k-button k-button-icontext' onclick='addMaterialPopup()' href='" +
                                Url.Action("InsertLocations", "Home") +
                              "/#=id#'" +
                            ">Edit</a>"
                        );


       // columns.Command(column => column.Edit());

        //columns.Command(command => { command.Edit(); }).Width(160);
    })
    .ToolBar(toolbar => toolbar.ClientTemplate("<a class='k-button k-button-icontext' onclick='addMaterialPopup()' href='InsertLocations/'></span>Add Locations</a>"))
    .Editable(editable => editable.Mode(GridEditMode.PopUp))
    .Pageable()
    .Sortable()
    .Scrollable()
    .HtmlAttributes(new { style = "height:430px;" })
    .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(20)
        .Events(events => events.Error("Error"))
       .Model(model => model.Id(p => p.id))

        .Create(update => update.Action("InsertLocations", "Home"))
        .Read(read => read.Action("DisplayLocations", "Home"))
        .Update(update => update.Action("InsertLocations", "Home",  new { id =0 }))
        .Destroy(update => update.Action("DisplayLocations", "Home"))
    )
)