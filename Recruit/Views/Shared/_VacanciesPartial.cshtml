@model Candidate
@{ List<SelectListItem>
     vacancy = new List<SelectListItem>
         ();
    @foreach (var items in (IEnumerable<Vacancy>)TempData["Vacancies"])
    {
        vacancy.Add(new SelectListItem
        {


            Text = items.name,
            Value = items.id.ToString(),
            Selected = true

        });
    }
}
<div class="column">
    <label class="control-label1">Position applied </label>
    @Html.DropDownListFor(model => model.position_applied_code, new SelectList(vacancy, "Value", "Text"), "---Choose Position---", new { @class = "form-control" })
    <span asp-validation-for="position_applied_code" class="text-danger"></span>

</div>