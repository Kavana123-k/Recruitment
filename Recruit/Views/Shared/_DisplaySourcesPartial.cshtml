
@using Kendo.Mvc.UI;


@(Html.Kendo().Grid((IEnumerable<Source>)TempData["source"])
    .Name("grid")
    .Columns(columns =>
    {
        columns.Bound(p => p.id).Title("ID").Width(80);
        columns.Bound(p => p.code).Title("Code");
        columns.Bound(p => p.name).Title("Source");
      
    })
    .Pageable()
    .Scrollable()
    .HtmlAttributes(new { style = "height:430px;" })
    .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(20)

    )
)