@using Kendo.Mvc.UI;

@(Html.Kendo().Grid((IEnumerable<Location>)TempData["Location"])
    .Name("LocationGrid")
    .Columns(columns =>
    {
        columns.Bound(p => p.id).Title("ID");
        columns.Bound(p => p.city).Title("City");

    })
    .HtmlAttributes(new { style = "height: 550px;" })
    .Pageable(
     pageable => pageable
         .Input(true)
         .Numeric(false)
     )
    .Sortable()
    .Scrollable(scr=>scr.Height(430))

   
)