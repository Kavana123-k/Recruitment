
@using Kendo.Mvc.UI;


@(Html.Kendo().Grid((IEnumerable<Vacancy>)TempData["vacancy"])
    .Name("grid")
    .Columns(columns =>
    {
        columns.Bound(p => p.id).Title("ID");
        columns.Bound(p => p.code).Title("Code");
        columns.Bound(p => p.name).Title("Designation");
        columns.Bound(p => p.vacancy).Title("Vacancies");
      
    })
    .Pageable()
    .Scrollable()
    .HtmlAttributes(new { style = "height:430px;" })
    .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(20)
      
    )
)